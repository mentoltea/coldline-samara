{
    "compiler" : "g++",
    "linker" : "g++",
    "format" : ".cpp",
    "indir" : "src/",
    "outdir" : "bin/",
    "targetdir" : "build/",
    "target" : "main.exe",
    "cflags" : "-c -Wall -O0",
    "libs" : "-lraylibdll -lwinmm -lgdi32 -lm",
    "cpp_source" : [
        {
            "compiler" : "gcc",
            "name" : "memmanager",
            "format" : ".c",
            "dependencies" : [
                "src/memmanager.h"
            ]    
        },
        {
            "compiler" : "gcc",
            "name" : "vector",
            "format" : ".c",
            "dependencies" : [
                "src/vector.h"
            ]    
        },
        {
            "compiler" : "gcc",
            "name" : "json",
            "format" : ".c",
            "dependencies" : [
                "src/json.h"
            ]    
        },
        {
            "name" : "texturemanager",
            "dependencies" : [
                "src/texturemanager.h",
                "src/MManager.hpp"
            ]    
        },
        {
            "name" : "main",
            "dependencies" : [
                "src/game.h",
                "src/definitions.h",
                "src/MManager.hpp",
                "src/texturemanager.h"
            ]
        },
        {
            "name" : "game",
            "dependencies" : [
                "src/game.h",
                "src/definitions.h",
                "src/MManager.hpp",
                "src/texturemanager.h"
            ]    
        },
        "gamedefs",
        {
            "name" : "objects",
            "dependencies" : [
                "src/game.h",
                "src/definitions.h",
                "src/MManager.hpp",
                "src/texturemanager.h"
            ]    
        },
        {
            "name" : "levelloader",
            "dependencies" : [
                "src/levelloader.h",
                "src/game.h",
                "src/definitions.h",
                "src/MManager.hpp",
                "src/texturemanager.h"
            ]    
        }
    ]
}